{
  "name": "oc-restaurant-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && npm run schema:combine && next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "dotenv -e .env.local -- prisma generate",
    "db:generate": "npm run schema:combine && dotenv -e .env.local -- prisma generate",
    "schema:combine": "node scripts/schemaCombine.js",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:prune": "docker volume prune -f",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "seed:essentials": "tsx seeds/seedProfileEssentials.ts",
    "stripe:webhook": "stripe listen --forward-to http://localhost:3000/api/webhooks/stripe"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.926.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.18.0",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.3.0",
    "@tanstack/react-query": "^5.90.8",
    "@types/axios": "^0.9.36",
    "@types/stripe": "^8.0.416",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "bson": "^6.10.4",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "lucide-react": "^0.548.0",
    "mongodb": "^6.20.0",
    "next": "16.0.0",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.4.0",
    "next-themes": "^0.4.6",
    "prisma": "^6.18.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "stripe": "^19.3.0",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/date-fns": "^2.5.3",
    "@types/node": "^20.19.23",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
