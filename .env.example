# ==========================================
# DATABASE
# ==========================================
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# ==========================================
# AUTHENTICATION (NextAuth v5)
# ==========================================
# IMPORTANT: NextAuth v5 uses AUTH_SECRET (not NEXTAUTH_SECRET)
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here"

# Optional: Set this to your deployment URL in production
# For Vercel, this is auto-detected, but you can set it explicitly
AUTH_URL="https://your-app.vercel.app"

# ==========================================
# OAUTH PROVIDERS (Optional)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# ==========================================
# PAYMENT PROVIDERS
# ==========================================
# Choose your payment provider: "stripe" or "mercadopago"
PAYMENT_PROVIDER="stripe"

# Stripe Configuration
STRIPE_TEST_SECRET_KEY="sk_test_..."
STRIPE_TEST_PUBLISHABLE_KEY="pk_test_..."
STRIPE_LIVE_SECRET_KEY="sk_live_..."
STRIPE_LIVE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# MercadoPago Configuration (if using)
MERCADOPAGO_ACCESS_TOKEN="your-access-token"
MERCADOPAGO_PUBLIC_KEY="your-public-key"

# ==========================================
# DELIVERY PROVIDER
# ==========================================
DRIVER_PROVIDER="shipday"
SHIPDAY_API_KEY="your-shipday-api-key"
SHIPDAY_BASE_URL="https://api.shipday.com"
SHIPDAY_DRY_RUN="true"  # Set to "false" for production

# ==========================================
# GEOCODING & MAPS
# ==========================================
MAPBOX_TOKEN="your-mapbox-token"

# ==========================================
# FILE STORAGE (Wasabi S3)
# ==========================================
STORAGE_PROVIDER="wasabi"
WASABI_ACCESS_KEY="your-access-key"
WASABI_SECRET_KEY="your-secret-key"
WASABI_BUCKET="your-bucket-name"
WASABI_REGION="us-east-1"
WASABI_ENDPOINT="https://s3.wasabisys.com"

# ==========================================
# EMAIL PROVIDER
# ==========================================
NEXT_EMAIL_PROVIDER="mailgun"
NEXT_EMAIL_DOMAIN="go.orderchop.co"
NEXT_EMAIL_API_KEY="your-mailgun-api-key"

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
NODE_ENV="development"  # "production" for Vercel
